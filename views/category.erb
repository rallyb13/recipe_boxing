<h1><%= @category.name() %></h1>

<p> Recipes: </p>
<% @category.recipes().each() do |recipe| %>
  <br><a href="/recipe/:id"><%= recipe.dish() %></a>
    <% recipe.rating.to_i.times do  %>
    <span class="glyphicon glyphicon-star"></span>
    <% end %>
    <% 5.-(recipe.rating.to_i).times do  %>
    <span class="glyphicon glyphicon-star-empty"></span>
    <% end %>



<% end %>
