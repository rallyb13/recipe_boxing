<h2><%= @recipe.dish %></h2>

<div class="row">
  <div class="col-md-8">
    <h3>Instructions</h3>
    <ol>
      <% @recipe.instructions.each() do |instruction| %>
        <li><%= instruction.step() %></li>
      <% end %>
    </ol>
    <form action="/instructions" method="post">
      <input type="hidden" name="recipe_id" value="<%= @recipe.id %>">
      <label for="step">Add the next step</label>
      <input type="text" name="step">
      <button type="submit">Add it!</button>
    </form>

  </div>

  <div class="col-md-4">
    <h3>Ingredients</h3>
    <ul>
    <% @recipe.ingredients.each() do |ingredi| %>
      <li><%= ingredi.element() %></li>
    <% end %>
    </ul>
  </div>
</div>
